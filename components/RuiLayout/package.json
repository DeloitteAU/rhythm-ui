{
	"name": "@rhythm-ui/layout",
	"version": "1.0.0",
	"main": "lib/index.js",
	"scripts": {
		"clean": "rimraf lib",
		"build": "yarn clean && yarn build:types && babel -s -d lib src --extensions \".ts,.tsx\" --ignore *.spec.ts --copy-files",
		"start": "yarn clean && yarn d && babel -w -s -d lib src --extensions \".ts,.tsx\" --ignore *.spec.ts --copy-files",
		"build:types": "tsc --emitDeclarationOnly -d --noEmit false --declarationDir lib",
		"doc": "typedoc --ignoreCompilerErrors --module system  --exclude \"lit-element\" --theme markdown --out docs src",
		"d": "ruidocs --files ./**/*.css.ts --out ./docs"
	},
	"files": [
		"lib/"
	],
	"devDependencies": {
		"babel-preset-rhythm-ui": "^1.0.0"
	},
	"dependencies": {
		"ruidocs": "^1.0.0",
		"lit-element": "^2.1.0",
		"typedoc": "^0.14.2",
		"typedoc-plugin-markdown": "^1.2.1"
	}
}
