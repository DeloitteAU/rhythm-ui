{
	"name": "@rhythm-ui/news-listing-item",
	"version": "1.0.0",
	"main": "lib/index.js",
	"license": "BSD-3-Clause",
	"scripts": {
		"start": "yarn clean && yarn build:docs && babel -w -s -d lib src --extensions \".ts,.tsx\" --ignore *.spec.ts --copy-files",
		"clean": "rimraf lib",
		"build": "yarn clean && yarn build:babel && yarn build:docs",
		"build:babel": "babel -s -d lib src --extensions \".ts,.tsx\" --ignore *.spec.ts --ignore *.d.ts --copy-files",
		"build:docs": "ruidocs --files ./**/*.variables.ts --out ./docs"
	},
	"files": [
		"lib/"
	],
	"devDependencies": {
		"babel-preset-rhythm-ui": "^1.0.0",
		"ruidocs": "^1.0.0"
	},
	"dependencies": {
		"lit-element": "^2.1.0"
	}
}
