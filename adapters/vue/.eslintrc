{
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "ecmaFeatures": {
      "legacyDecorators": true
    }
  },
  "extends": [
    "../../.eslintrc.js",
    "plugin:vue/recommended"
  ],
  "overrides": [
		{
			"files": ["**/*.vue"],
			"rules": {
        "no-console": 2,
        "new-cap": [
          "warn", {
          "capIsNewExceptions": [
            "Component",
            "Emit",
            "Inject",
            "Mixins",
            "Model",
            "Prop",
            "PropSync",
            "Provide",
            "Watch"
            ]
          }
        ]
			}
		}
	]
}