{
  "name": "@deloitte-digital-au/rhythm-ui",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "author": "Deloitte Digital AU",
  "license": "BSD-3-Clause",
  "engines" : {
    "node" : ">=10.0.0 <11.0.0"
  },
  "workspaces": {
    "packages": [
      "components/**",
      "react/**",
      "vue/**",
      "tools/**",
      "www"
    ],
    "nohoist": [
      "**/gatsby",
      "**/gatsby-**",
      "**/webpack-cli"
    ]
  },
  "scripts": {
    "lint": "yarn lint:scripts && yarn lint:css",
    "lint:scripts": "yarn eslint --fix \"**/*.{ts,tsx,js,jsx}\"",
    "lint:css": "yarn stylelint \"components/**/*.ts\" --config .stylelintrc-ts.js",
    "bootstrap": "lerna bootstrap",
    "unstrap": "lerna clean --yes",
    "clean": "lerna run clean",
    "test": "RUI_NO_DEFAULT_REGISTER='false' yarn karma start",
    "build": "yarn build:site && yarn build:storybook",
    "build:site": "lerna run build --scope www --include-filtered-dependencies --parallel --stream",
    "build:vanilla": "lerna run build --stream --scope rhythm-ui --include-filtered-dependencies",
    "build:storybook": "yarn lerna run build ---ignore www --ignore rhythm-ui --ignore test && build-storybook -c .storybook -o .out",
    "start": "lerna run start --scope www --include-filtered-dependencies --parallel --stream",
    "format": "prettier --write src/**/*.{js,jsx}",
    "storybook": "start-storybook -p 6006 -c .storybook",
    "generate": "plop"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:DeloitteDigitalAPAC/rhythm-ui.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{json,scss,md}": [
      "git add"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint",
      "stylelint --config .stylelintrc-ts.js",
      "git add"
    ],
    "*.{scss,css}": [
      "stylelint --config .stylelintrc-css.js --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@deloitte-digital-au/eslint-config": "^3.4.0",
    "@deloitte-digital-au/stylelint-config": "^2.0.1",
    "@storybook/addon-knobs": "^5.1.3",
    "@storybook/addons": "^5.1.3",
    "@storybook/react": "^5.1.3",
    "@types/jasmine": "^3.3.13",
    "@types/react": "^16.8.19",
    "@types/storybook__react": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "concurrently": "^4.1.0",
    "core-js": "^3.1.3",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-lit": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.3.0",
    "jasmine": "^3.4.0",
    "karma": "^4.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^2.0.1",
    "karma-spec-reporter": "^0.0.32",
    "karma-webpack": "^4.0.2",
    "lerna": "^3.5.1",
    "lint-staged": "^8.1.7",
    "lit-element": "^2.1.0",
    "plop": "^2.3.0",
    "prettier": "^1.17.0",
    "react-docgen-typescript-loader": "^3.1.0",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "rimraf": "^2.6.3",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.7.0",
    "typescript": "^3.4.5",
    "watchify": "^3.11.1",
    "webpack-cli": "^3.3.2"
  },
  "dependencies": {
    "@storybook/core": "^5.1.3",
    "storybook-readme": "^5.0.3"
  }
}
