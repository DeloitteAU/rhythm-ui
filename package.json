{
  "name": "@deloitte-digital-au/rhythm-ui",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "author": "Deloitte Digital AU",
  "license": "BSD-3-Clause",
  "workspaces": {
    "packages": [
      "components/**",
      "reactComponents/**",
      "vueComponents/**",
      "tools/**",
      "www"
    ],
    "nohoist": [
      "**/gatsby",
      "**/gatsby-**",
      "**/webpack-cli"
    ]
  },
  "scripts": {
    "lint": "yarn lint:css && yarn lint:ts",
    "lint:ts": "yarn eslint components/**/src/** --ext .ts",
    "lint:react": "yarn eslint www/src --ext .tsx",
    "lint:css": "yarn stylelint \"components/**/*.ts\" --config .stylelintrc-ts.js",
    "bootstrap": "lerna bootstrap",
    "unstrap": "lerna clean --yes",
    "clean": "lerna run clean",
    "test": "yarn test:types && lerna run test",
    "test:types": "tsc --noEmit",
    "build": "yarn test:types && yarn build:site",
    "build:site": "lerna run build --scope www --include-filtered-dependencies --parallel --stream",
    "build:vanilla": "lerna run build --stream --scope rhythm-ui --include-filtered-dependencies",
    "start": "lerna run start --scope www --include-filtered-dependencies --parallel --stream",
    "format": "prettier --write src/**/*.{js,jsx}",
    "generate": "plop"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:DeloitteDigitalAPAC/rhythm-ui.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged && yarn test:types",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{json,scss,md}": [
      "git add"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint",
      "stylelint --config .stylelintrc-ts.js",
      "git add"
    ],
    "*.{scss,css}": [
      "stylelint --config .stylelintrc-css.js --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@deloitte-digital-au/stylelint-config": "^2.0.1",
    "@types/react": "^16.8.19",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "concurrently": "^4.1.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.3.0",
    "lerna": "^3.5.1",
    "lint-staged": "^8.1.7",
    "lit-element": "^2.1.0",
    "plop": "^2.3.0",
    "prettier": "^1.17.0",
    "rimraf": "^2.6.3",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.7.0",
    "typescript": "^3.4.5",
    "webpack-cli": "^3.3.2"
  }
}
